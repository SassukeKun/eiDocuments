{
  "compilerOptions": {
    /* Diretórios */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Ambiente Node.js moderno */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Tipos */
    "lib": ["ES2020"],
    "types": ["node"],

    /* Debug & Build */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Boas práticas */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
